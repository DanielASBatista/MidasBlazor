@page "/lancamentos/getall"
@rendermode InteractiveServer

@using MidasBlazor.Models
@using MidasBlazor.Services
@inject LancamentoService LancamentoService

<PageTitle>Gerenciar Lançamentos</PageTitle>

<h3 class="mb-3">Gerenciar Lançamentos</h3>

<!-- ============================
        FILTROS
=============================== -->
<div class="card mb-4">
    <div class="card-header">
        <strong>Filtros de Pesquisa</strong>
    </div>

    <div class="card-body">
        <div class="row g-3">

            <!-- Filtro por Data -->
            <div class="col-md-3">
                <label>Data</label>
                <InputDate class="form-control" @bind-Value="filtroData" />
            </div>

            <!-- Filtro Ano -->
            <div class="col-md-2">
                <label>Ano</label>
                <InputSelect class="form-control" @bind-Value="filtroAno">
                    <option value="">Selecione</option>
                    @foreach (var ano in Enumerable.Range(2000, 51))
                    {
                        <option value="@ano">@ano</option>
                    }
                </InputSelect>
            </div>

            <!-- Filtro Mês -->
            <div class="col-md-2">
                <label>Mês</label>
                <InputSelect class="form-control" @bind-Value="filtroMes">
                    <option value="">Selecione</option>
                    @foreach (var m in Enumerable.Range(1, 12))
                    {
                        <option value="@m">@MesNome(m)</option>
                    }
                </InputSelect>
            </div>

            <!-- Filtro Valor -->
            <div class="col-md-3">
                <label>Valor Exato</label>
                <InputNumber class="form-control" @bind-Value="filtroValor" />
            </div>

            <!-- Comparação -->
            <div class="col-md-3">
                <label>Maior que (Valor)</label>
                <InputNumber class="form-control" @bind-Value="filtroComparacao" />
            </div>

            <div class="col-12 mt-2">
                <button class="btn btn-primary me-2" @onclick="AplicarFiltros">Aplicar Filtros</button>
                <button class="btn btn-secondary" @onclick="LimparFiltros">Limpar Filtros</button>
            </div>

        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(mensagem))
{
    <div class="alert alert-info mt-3">@mensagem</div>
}

<!-- ============================
        TABELA DE RESULTADOS
=============================== -->
@if (lista is null)
{
    <p>Carregando...</p>
}
else if (lista.Count == 0)
{
    <div class="alert alert-warning">Nenhum lançamento encontrado.</div>
}
else
{
    <h4 class="mt-4">Resultados (@lista.Count)</h4>

    <table class="table table-bordered mt-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Data</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.IdLancamento</td>
                    <td>@item.Descricao</td>
                    <td>@item.Valor.ToString("C")</td>
                    <td>@item.Data?.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-success mt-3" @onclick="CalcularSomatoria">
        Somar Todos os Valores
    </button>

    @if (somatoria > 0)
    {
        <div class="alert alert-success mt-3">
            <strong>Somatória:</strong> @somatoria.ToString("C")
        </div>
    }
}

@code {

    // LISTA PRINCIPAL
    private List<LancamentoViewModel>? lista;

    // CAMPOS DE FILTRO
    private DateTime? filtroData;
    private int? filtroAno;
    private int? filtroMes;
    private decimal? filtroValor;
    private decimal? filtroComparacao;

    private decimal somatoria = 0;
    private string mensagem = "";

    protected override async Task OnInitializedAsync()
    {
        lista = await LancamentoService.GetAllAsync();
    }

    private async Task AplicarFiltros()
    {
        try
        {
            mensagem = "";
            somatoria = 0;

            // Ordem de prioridade dos filtros
            if (filtroData != null)
            {
                lista = await LancamentoService.GetByDataAsync(filtroData.Value);
                mensagem = $"Filtrando por data {filtroData.Value:dd/MM/yyyy}";
            }
            else if (filtroAno != null && filtroMes != null)
            {
                lista = await LancamentoService.GetByMesAsync(filtroAno.Value, filtroMes.Value);
                mensagem = $"Filtrando por {MesNome(filtroMes.Value)} / {filtroAno}";
            }
            else if (filtroAno != null)
            {
                lista = await LancamentoService.GetByAnoAsync(filtroAno.Value);
                mensagem = $"Filtrando por ano {filtroAno}";
            }
            else if (filtroValor != null)
            {
                lista = await LancamentoService.GetByValorAsync(filtroValor.Value);
                mensagem = $"Filtrando por valor exato R$ {filtroValor}";
            }
            else if (filtroComparacao != null)
            {
                lista = await LancamentoService.GetComparacaoAsync(filtroComparacao.Value);
                mensagem = $"Filtrando maiores que R$ {filtroComparacao}";
            }
            else
            {
                lista = await LancamentoService.GetAllAsync();
                mensagem = "Mostrando todos os lançamentos.";
            }
        }
        catch (Exception ex)
        {
            mensagem = $"Erro: {ex.Message}";
        }
    }

    private async Task CalcularSomatoria()
    {
        somatoria = await LancamentoService.GetSomatoriaAsync();
        mensagem = "Somatória calculada!";
    }

    private async Task LimparFiltros()
    {
        filtroData = null;
        filtroAno = null;
        filtroMes = null;
        filtroValor = null;
        filtroComparacao = null;
        somatoria = 0;

        lista = await LancamentoService.GetAllAsync();
        mensagem = "Filtros limpos.";
    }

    private string MesNome(int mes)
    {
        return new DateTime(2000, mes, 1).ToString("MMMM");
    }
}
